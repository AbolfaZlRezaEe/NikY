<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Niky Bottom Navigation Style -->
    <style name="NikyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/niky_bottom_navigation_item_color</item>
        <item name="itemTextColor">@color/niky_bottom_navigation_item_color</item>
        <item name="itemRippleColor">@color/niky_bottom_navigation_ripple_color</item>
        <item name="itemTextAppearanceActive">@style/nikyActiveItemBottomNavigationTextAppearance
        </item>
    </style>

    <style name="nikyActiveItemBottomNavigationTextAppearance" parent="TextAppearance.MyTheme.Caption">
        <item name="fontFamily">@font/primary_extra_bold</item>
        <item name="android:fontFamily">@font/primary_extra_bold</item>
    </style>

    <!-- Niky Search EditText Style -->
    <style name="NikySearchEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_search_edittext</item>
        <item name="android:textSize">@dimen/editTextTextSize</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:paddingStart">@dimen/extraPadding</item>
        <item name="android:paddingEnd">@dimen/normalPadding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColorHint">?android:textColorSecondary</item>
    </style>

    <!-- Niky Auth EditText Style -->
    <style name="NikyAuthEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_auth_edittext</item>
        <item name="android:textSize">@dimen/editTextTextSize</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:paddingStart">@dimen/normalPadding</item>
        <item name="android:paddingEnd">@dimen/normalPadding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">@dimen/customAuthEditTextMinHeight</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:textColorHint">@color/white48</item>
    </style>

    <!-- Niky Auth Material Button Style -->
    <style name="NikyAuthMaterialButtonStyle" parent="Theme.NikY.Auth">
        <item name="backgroundTint">?colorOnBackground</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="cornerRadius">@dimen/customAuthMaterialButtonCornerRadius</item>
        <item name="android:fontFamily">@font/primary_bold</item>
    </style>

    <!-- Niky Auth Snackbar Style -->
    <style name="NikyAuthSnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Niky EditText Style -->
    <style name="NikyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">@dimen/lowNormalMargin</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- Niky Profile Link TextView Style -->
    <style name="NikyProfileTextViewStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_marginTop">@dimen/littleMargin</item>
        <item name="android:layout_marginBottom">@dimen/littleMargin</item>
        <item name="android:minHeight">@dimen/profileLinkTextViewMinHeight</item>
        <item name="android:drawablePadding">@dimen/customPaddingNormal</item>
        <item name="android:paddingStart">@dimen/normalPadding</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- Niky UserProfile Shape Appearance -->
    <style name="NikyUserProfileShapeAppearance">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Niky Comment EditText Style -->
    <style name="NikyCommentEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_comment_edittext</item>
        <item name="android:textSize">@dimen/editTextTextSize</item>
        <item name="android:textColor">?colorOnBackground</item>
        <item name="android:paddingStart">@dimen/normalPadding</item>
        <item name="android:paddingEnd">@dimen/normalPadding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
        <item name="android:minHeight">@dimen/customAuthEditTextMinHeight</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColorHint">@color/darkGray</item>
    </style>
</resources>